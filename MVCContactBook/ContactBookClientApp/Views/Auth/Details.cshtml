@using ContactBookClientApp.ViewModels
@model UserViewModel

<div class="container" style="display: flex; justify-content: center;">

    <div class="card container text-dark bg-light m-3 p-0" style="max-width: 30rem;">
        <div class="card-header d-flex align-items-center justify-content-center">
            @if (Model.FileName == null)
            {
                <img src="~/uploads/DefaultImage.jpg" alt="User Image" width="50" height="50" style="border-radius: 50%; margin-right: 10px;" />
            }
            else
            {
                <img src="~/uploads/@Model.FileName" alt="User Image" width="50" height="50" style="border-radius: 50%; margin-right: 10px;" />
            }
            <h4 class="mb-0">@Model.FirstName @Model.LastName</h4>
        </div>
        <div class="card-body">
            <p class="card-text">
                <h6>Phone: @Model.ContactNumber</h6>
                <h6>Email: @Model.Email</h6>
                <!-- Additional fields can be added as per your requirements -->
            </p>
            <div style="display: flex; justify-content: center; margin-top: 10px;">
                <a asp-action="Edit" asp-route-id="@User.Identity.Name" class="btn btn-outline-info">Edit</a>
                <a asp-action="Index" asp-controller="Contact" class="btn btn-secondary" style="margin-left: 10px;">Back To List</a>
            </div>
        </div>
    </div>

</div>
