@using ContactBookClientApp.ViewModels
@model ForgetPasswordViewModel

<div class="card shadow-sm" style="max-width: 400px; margin: 0 auto;">
    <div class="card-body">
        <h5 class="card-title text-center">Reset Password</h5>
        <form asp-action="ChangePassword" method="post" novalidate class="needs-validation" style="margin-top: 1.5rem;">

            <input asp-for="UserName" type="hidden" />

            <div class="mb-3">
                <label asp-for="Password" class="form-label">New Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your new password" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm your new password" required />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-block">Reset Password</button>
            </div>
        </form>
    </div>
</div>
