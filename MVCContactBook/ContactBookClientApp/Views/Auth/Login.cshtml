@using ContactBookClientApp.ViewModels
@model LoginViewModel
    <div class="container">
        <div class="form-container">
            <h1>Login</h1>
            <form asp-action="Login" method="post">
                <div class="form-group">
                    <label for="Username">Username</label>
                    <input id="Username" asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Password">Password</label>
                    <input id="Password" asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Login</button>
                </div>
            <div class="text-center">
                <a asp-action="ForgotPassword" class="link-primary">Forgot Password?</a>
            </div>
            </form>
        </div>
    </div>

