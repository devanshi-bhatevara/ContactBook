@using ContactBookClientApp.ViewModels
@model UpdateContactViewModel

<h1>Modify Contact</h1>

<form asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="ContactId" />
    <input type="hidden" asp-for="FileName" />
    <input type="hidden" asp-for="ImageByte" />

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="CountryId" class="control-label"></label>
                <select id="divisionDropdown" asp-for="CountryId" class="form-control" asp-items="@(new SelectList(Model.Countries, "CountryId", "CountryName"))">
                    <option value="">--Select Country--</option>
                </select>
                <span asp-validation-for="CountryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StateId" class="control-label"></label>
                <select id="positionDropdown" asp-for="StateId" class="form-control">
                    <option value="">--Select State--</option>
                    @foreach (var position in Model.States)
                    {
                        <option value="@position.StateId" data-category="@position.CountryId">@position.StateName</option>
                    }
                </select>
                <span asp-validation-for="StateId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" type="email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsFavourite" class="control-label"></label>
                <input asp-for="IsFavourite" type="checkbox" />
                <span asp-validation-for="IsFavourite" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label">Gender:</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="Gender" value="M" id="male" />
                    <label class="form-check-label" for="male">Male</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="Gender" value="F" id="female" />
                    <label class="form-check-label" for="female">Female</label>
                </div>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="File" class="control-label"></label>
                <input asp-for="File" type="file" class="form-control" accept="image/*" />
            </div>
            <div class="form-group">
                <label asp-for="birthDate" class="control-label"></label>
                <input asp-for="birthDate" type="date" class="form-control" />
                <span asp-validation-for="birthDate" class="text-danger"></span>
            </div>
            @if (!string.IsNullOrEmpty(Model.FileName))
            {
                <div class="form-group">
                    <label>Current Image:</label><br />
                    <img src="/uploads/@Model.FileName" class="img-thumbnail" alt="Current Image" width="100" height="100" />
                </div>
                <div class="form-group">
                    <label asp-for="RemoveImage" class="control-label"></label>
                    <input asp-for="RemoveImage" type="checkbox" />
                    <span asp-validation-for="RemoveImage" class="text-danger"></span>
                </div>
            }
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back To List</a>
    </div>
</form>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(function () {
        // Initially hide all state options
        $('#positionDropdown option').hide();

        // Get the initially selected country
        var initialCountry = $('#divisionDropdown').val();

        // Show state options corresponding to the initially selected country
        $('#positionDropdown option[data-category="' + initialCountry + '"]').show();

        $('#divisionDropdown').change(function () {
            var selectedCountry = $(this).val();
            $('#positionDropdown option').hide();
            $('#positionDropdown option[data-category="' + selectedCountry + '"]').show();

            // Select the first visible option in the state dropdown
            $('#positionDropdown').val($('#positionDropdown option[data-category="' + selectedCountry + '"]:visible:first').val());
        });
    });

</script>
